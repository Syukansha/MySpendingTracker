<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.javacodegeeks.myspendingtracker">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_money"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_money_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySpendingTracker">

        <activity
            android:name=".splashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login_user"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".register_user"
            android:exported="true" />
        <activity
            android:name=".updateExpense"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".CategorySort"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".AddNewCategory"
            android:exported="true"
            android:noHistory="true"/>
        <activity
            android:name=".UpdateUserProfile"
            android:exported="false"
            android:label="@string/title_activity_update_user_profile"
            />
    </application>

</manifest>